<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".RecordActivity"
    android:clickable="true"
    android:background="@color/twitter_back"
    android:id="@+id/content"
    android:gravity="center"
    >

    <EditText
        android:id="@+id/title_musicsheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="160dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:hint="Musicxml Filename"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:text="Recording"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:visibility="invisible"
             />


        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-thin"
            android:text="00:00"
            android:textColor="@color/blue"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/buttontap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-thin"
            android:text="Tap the Button to Start \n           Recording"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>
    <TextView
        android:id="@+id/buttontap_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-thin"
        android:text="Tap the Button to Stop \n           Recording"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textSize="20sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:id="@+id/main_relative"
        >
        <ImageButton
            android:id="@+id/microphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center|bottom"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/record_btn_description"
            android:src="@drawable/micro" />
    </RelativeLayout>

</FrameLayout>
